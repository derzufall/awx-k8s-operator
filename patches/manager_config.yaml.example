apiVersion: apps/v1
kind: Deployment
metadata:
  name: awx-operator-controller-manager
  namespace: system
spec:
  template:
    spec:
      containers:
      - name: manager
        # Add environment variables to configure the operator
        env:
        - name: WATCH_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: RECONCILIATION_PERIOD
          value: "60" # Reconciliation period in seconds
        - name: LOG_LEVEL
          value: "info"
        # Customize resources
        resources:
          limits:
            cpu: "1"
            memory: 1Gi
          requests:
            cpu: 500m
            memory: 500Mi
        # Customize volume mounts if needed
        volumeMounts:
        - name: custom-config
          mountPath: /etc/config
          readOnly: true
      # Add custom volumes if needed
      volumes:
      - name: custom-config
        configMap:
          name: awx-operator-config 