apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

# Points to the default kustomization which includes all needed components
resources:
- config/default

# Namespace configuration - change this to your preferred namespace
namespace: awx-operator-system

# Image configuration - update these values to match your registry and tags
images:
- name: controller
  newName: your-registry/awx-operator
  newTag: your-tag

# Common labels for all resources - these can be customized as needed
commonLabels:
  app.kubernetes.io/name: awx-operator
  app.kubernetes.io/instance: awx-operator
  app.kubernetes.io/part-of: awx-operator
  app.kubernetes.io/managed-by: kustomize
  environment: production # Add your own labels as needed

# Patches for customizing behavior - comment out if not needed
patchesStrategicMerge:
- patches/manager_resources.yaml
# - patches/your-custom-patch.yaml

# ConfigMaps for operator configuration - uncomment and customize as needed
# configMapGenerator:
# - name: awx-operator-config
#   literals:
#   - FEATURE_FLAG_ENABLED=true
#   - EXTRA_SETTING=value

# Secrets for operator configuration - uncomment and customize as needed
